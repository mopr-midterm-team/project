<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi EditText được focus (đang nhập) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền -->
            <stroke android:width="2dp" android:color="#6200EE"/> <!-- Viền khi focus -->
            <corners android:radius="10dp"/> <!-- Bo góc -->
            <padding android:left="12dp" android:right="12dp"/>
        </shape>
    </item>

    <!-- Trạng thái mặc định (chưa focus) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Viền mặc định -->
            <corners android:radius="10dp"/>
            <padding android:left="12dp" android:right="12dp"/>
        </shape>
    </item>
</selector>
